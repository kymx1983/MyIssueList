<div class="main">
  <div class="container">
    <h1>課題登録</h1>
    <%= form_tag("/issue/update") do %>
      <input type="text" name="id" value="<%= @issue.id %>">
      <div class="form-group">
        <h2><label>タイトル:</label></h2>
        <div class="input-content">
          <input type="text" class="input-text" name="title" value="<%= @issue.title %>">
        </div>
      </div>

      <div class="form-group">
        <h2><label>内容:</label></h2>
        <div class="input-content">
          <textarea class="content-area" name="content" rows="3"><%= @issue.content %></textarea>
        </div>
      </div>

      <hr>
      <br>
      <input type="submit" class="btn-flat-border" value="確定">　
      <a href="#" th:href="@{/project/delete/(id=${content.id})}" class="btn btn-flat-border">削除</a>　
    <% end %>
    <br><br>
  </div>
</div>
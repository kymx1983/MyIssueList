<div class="main">
  <div class="container">
    <h1>課題詳細</h1>
    <div class="form-group">
      <h2><label>タイトル:</label></h2>
      <div class="input-content">
        <%= @issue.title %>
      </div>
    </div>

    <div class="form-group">
      <h2><label>内容:</label></h2>
      <div class="input-content">
        <%= @issue.content %>
      </div>
    </div>

    <hr>
    <br>
    <wrap class="btn btn-flat-border">
      <%= link_to("編集", "/issue/edit/#{@issue.id}") %>
    </wrap>

    <wrap class="btn btn-flat-border">
      <%= link_to("削除", "/issue/destroy/#{@issue.id}") %>
    </wrap>
    <br><br>
  </div>
</div>
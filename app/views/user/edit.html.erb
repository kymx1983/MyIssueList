<div class="main">
  <div class="container">
    <h1>ユーザの編集</h1>
    <%= form_tag("/user/update") do %>
      <input type="hidden" class="input-text" name="id" value="<%= @user.id %>"/>
      <div class="form-group">
        <h2><label>名前</label></h2>
        <div class="input-content">
          <label>
            <input type="text" class="input-text" name="user_name" value="<%= @user.user_name %>"/>
          </label>
        </div>
      </div>

      <div class="form-group">
        <h2><label>ID</label></h2>
        <div class="input-content">
          <label>
            <input type="text" class="input-text" name="login_id" value="<%= @user.login_id %>"/>
          </label>
        </div>
      </div>

      <div class="form-group">
        <h2><label>password</label></h2>
        <div class="input-content">
          <label>
            <input type="password" class="input-text" name="password" value="<%= @user.password %>"/>
          </label>
        </div>
      </div>

      <hr>
      <br>
      <input type="submit" class="btn-flat-border" value="確定">
    <% end %>
    <br><br>
  </div>
</div>